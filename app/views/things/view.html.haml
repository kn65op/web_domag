= javascript_include_tag "things/things"

%h1= @thing.name
%h2= @thing.description
%p= (t 'things.view.unit') + ": " +  @thing.unit
%p= (t 'things.view.category') + ": " + @thing.category.name

= t('common.search')
%input#search

= hidden_field_tag  "limits_create_link", get_limits_path(@thing, "create")
= hidden_field_tag  "limits_delete_link", get_limits_path(@thing, "delete")
%input{:type => "checkbox", :onclick => "change_limits()", :id => "limits_checkbox"}= t 'things.view.limit.checkbox'

.limits_form#limits_place
  = render :partial => "limits_form", :locals => {:thing => @thing}

= render :partial => "common/thing_instances_table", :locals => {:ti => @ti}

.edit= link_to t('things.view.edit'), edit_thing_path(@thing)
.delete= link_to t('things.view.delete'), delete_thing_path(@thing)
